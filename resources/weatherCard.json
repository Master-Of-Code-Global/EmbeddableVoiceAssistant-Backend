{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "{acCity}, {acState}",
      "size": "Large",
      "isSubtle": true
    },
    {
      "type": "TextBlock",
      "text": "{acCurrentDateTime}",
      "spacing": "None"
    },
    {
      "type": "TextBlock",
      "text": "{acDailySummary}",
      "spacing": "None"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "{acUrlConditionsImage}",
              "size": "Large"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "{acCurrentTemperature}",
              "size": "ExtraLarge",
              "spacing": "None"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Â°F",
              "weight": "Bolder",
              "spacing": "Small"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Hi {actempHi}",
              "horizontalAlignment": "Left"
            },
            {
              "type": "TextBlock",
              "text": "Lo {actempLow}",
              "horizontalAlignment": "Left",
              "spacing": "None"
            }
          ]
        }
      ]
    }
  ]
}
